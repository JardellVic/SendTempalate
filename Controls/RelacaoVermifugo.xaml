<UserControl x:Class="CRM.Controls.RelacaoVermifugo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Background="#FF1A1A1A">
    <Grid>
        <Label Content="Relação Vermifugo" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="30" FontFamily="Cascadia Code SemiBold"/>
        <StackPanel Margin="0,232,0,232">
            <!-- Label para mostrar o progresso -->
            <Button Content="Gerar Clientes" Width="200" Click="Button_Click"/>
            <!-- Label para mostrar o progresso -->
            <Label x:Name="ProgressLabel" Content="" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ProgressBar x:Name="ProgressBar" IsIndeterminate="false" Width="728" Height="34"/>

            <!-- ProgressBar -->
        </StackPanel>

    </Grid>
</UserControl>
